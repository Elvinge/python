
def leap_year(year :int) -> bool:
    return not (year % 4 != 0 or year % 100 == 0 and year % 400 != 0)


def is_valid_date(full_date: str) -> bool:
    date, month, year = (int(item) for item in full_date.split('.'))
    if year < 1 or year > 10000 or month < 1 or month > 12 or date < 1 or date > 31:
        return False
    if month in (4, 6, 9, 11) and date > 30:
        return False
    if month == 2 and leap_year(year) and date > 29:
        return False
    if month == 2 and not leap_year(year) and date > 28:
        return False
    return True
    
